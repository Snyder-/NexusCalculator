<% if user_signed_in? %>
<div id="member-sign-in" class="row text-center jumbotron hidden-xs">
  <h1 id="member">Thank you for signing in.</br>Feel free to look around.</h1>
  <p>Let us know if you want us to add anything to the application</p>
</div>

<section id="cave-layout">
  <div class="panel panel-success">
    <div class="panel-header">
      <div class="dropdown">
        <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">Caves
          <span class="caret"></span></button>
        <ul id="caves" class="dropdown-menu">
          <li><a href="#">Assassin</a></li>
          <li><a href="#">Magus</a></li>
          <li><a href="#">Hillman</a></li>
          <li><a href="#">Hunter</a></li>
          <li><a href="#">Anchorite</a></li>
          <li><a href="#">Wind</a></li>
          <li><a href="#">Dread</a></li>
          <li><a href="#">Greyhand</a></li>
          <li><a href="#">Bandit</a></li>
          <li><a href="#">Earth</a></li>
          <li><a href="#">Water</a></li>
        </ul>
      </div>
    </div>
        <div id="creature-content" class="panel-content">
       <section class="creatures"> 
       <div class="row">  
        <div class="col-xs-2">
          <h2 id="cave"><%= @caves.first.cavename %></h2>
          <h4 id="creature"><%= @caves.first.creature.first.creaturename %></h4>
        </div>
        <!-- Add in the creatures dynamically -->
        <div class="col-xs-10">
          <div id="creatures" class="row">
            
          </div>
        </div>
      </div>
    </div>
    </div>

       </section>
    
</section>

<section id="calculator">
  <div class="row">
    <div class="container panel col-xs-12">
      <div class="row">
        <div class="col-xs-12 text-center">
          <h2 class="title">Nexus Hunting Calculator</h2>
          <h4>Please enter your character's stats.</h4>
        </div>
      </div>

      <div class="row hidden-xs">
      <div id="mgw" class="form-group">
        <div class="col-xs-12 col-md-2 col-large-1">
          <div class="input-group">
          <span class="input-group-addon">AC</span>
          <input class="form-control" id="charAC" placeholder="AC" value="-95" size="3">
        </div>
        </div>
        <div class="col-xs-12 col-md-2 col-large-1">
          <div class="input-group">
            <span class="input-group-addon">Might</span>
           <input class="form-control" id="charMight" placeholder="Might" value="135" size="3">
         </div>
       </div>
           <div class="col-xs-12 col-md-2 col-large-1">
            <div class="input-group">
            <span class="input-group-addon">Grace</span>
           <input class="form-control" id="charGrace" placeholder="Grace" value="135" size="3">
         </div>
           </div>
           <div class="col-xs-12 col-md-2 col-large-1">
            <div class="input-group">
            <span class="input-group-addon">Will</span>
           <input class="form-control" id="charWill" placeholder="Will" value="135" size="3">
         </div>
           </div>
          </div>
      </div>

    </br>

      <div class="row">
        <div class="form-group">
        <div class="col-md-8 col-large-12">
          <div class="input-group">
            <span class="input-group-addon vita">Vita</span>
            <input type="text" class="form-control bfh-number" id="charVita" placeholder="Character Vita" data-min="1000" data-max="99999999" size="19">
          </div>
        </div>

        <div class="col-md-8 col-large-12">
         <div class="input-group">
            <span class="input-group-addon mana">Mana</span>
            <input type="text" class="form-control bfh-number" id="charMana" placeholder="Character Mana" data-min="1000" data-max="99999999" size="19">
          </div>
        </div>
      </div>
    </div>

  
      <div class="row">
        <div class="col-xs-12">
          <p></p>
        </div>
      </div>
        <div class="row">
          <div class="col-xs-1 dropdown">
            <button id="spellTitle" class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Spells
              <span class="caret"></span></button>
            <ul id="spells" class="dropdown-menu">
              <li class="mage-spells dropdown-header">Mage</li>
                <li class="mage-spells"><a href="#">Hellfire</a></li>
                <li class="mage-spells"><a href="#">Sam Hellfire</a></li>
                <li class="mage-spells"><a href="#">Inferno</a></li>
                <li class="mage-spells"><a href="#">Sa Hellfire</a></li>
                <li class="warrior-spells dropdown-header">Warrior</li>
                <li class="warrior-spells"><a href="#">Slash</a></li>
                <li class="warrior-spells"><a href="#">Beserk</a></li>
                <li class="warrior-spells"><a href="#">Whirlwind</a></li>
                <li class="warrior-spells"><a href="#">Assault</a></li>
                <li class="warrior-spells"><a href="#">Karak</a></li>
                <li class="warrior-spells"><a href="#">Warrior Sa</a></li>
                <li class="warrior-spells subpath"><a href="#">Rend</a></li>
                <li class="warrior-spells subpath"><a href="#">Townie</a></li>
              <li class="rogue-spells dropdown-header">Rogue</li>
                <li class="rogue-spells"><a href="#">Desperate Attack</a></li>
                <li class="rogue-spells"><a href="#">Lethal Strike</a></li>
                <li class="rogue-spells"><a href="#">Sam Kae</a></li>
                <li class="rogue-spells subpath"><a href="#">Rogue Sa</a></li>
                <li class="rogue-spells subpath"><a href="#">Assassinate</a></li>
              <li class="poet-spells dropdown-header">Poet</li>
                <li class="poet-spells"><a href="#">Retribution</a></li>
                <li class="poet-spells subpath"><a href="#">Son-Kal</a></li>
            </ul>
          </div>
        </div>

        <div class="row">
         <div class="col-md-7 col-large-12">
          <h3>Damage: <span id="damageOutput"></span>
        </h3>
        </div>
      </div>

      </div>
    </div>
  </section>
</div>

<!-- ELSE STATEMENT -->

<% else %>


<div class="container">
<div class="row">
  <div class="col-large-12">
  <h1>Please sign in to get full functionality!</h1>
  <p>By signing up you get access to:</p>
  <ul>
    <li>Save stats (see where you left off)</li>
    <li>Track experience hunted between every stat save</li>
    <li>More additional features to come soon...</li>
  </ul>
</div>
</div>
</div>
<% end %>
