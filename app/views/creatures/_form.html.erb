<%= form_for(@creature) do |f| %>
  <% if @creature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@creature.errors.count, "error") %> prohibited this creature from being saved:</h2>

      <ul>
      <% @creature.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel-group">
      <div class="field">
        <div class="panel panel-primary">
          <div class="panel-heading">
          <%= f.label :creature_name %>
          </div>
          <div class="panel-body">
          <%= f.text_field :creaturename, size: 25, style: "font-size:20px;" %>
          </div>
        </div>
      </div>
      <div class="field">
        <div class="panel panel-success">
          <div class="panel-heading">
        <%= f.label :image_location, style: "font-size:20px;" %>
         </div>
          <div class="panel-body">
        <%= f.text_field :imagelocation, size: 34, style: "font-size:20px;" %>
      </div>
        <p>
      </div>
      <div class="field">
        <div class="panel panel-info">
          <div class="panel-heading">
        <%= f.label :vita %>
         </div>
          <div class="panel-body">
        <%= f.number_field :vita, style: "font-size:20px;" %>
      </div>
        <p>
      </div>
      <div class="field">
        <div class="panel panel-warning">
          <div class="panel-heading">
        <%= f.label :ac %>
         </div>
          <div class="panel-body">
        <%= f.number_field :ac, style: "font-size:20px;" %>
          </div>
      </div>
      <div class="field">
        <div class="panel panel-danger">
          <div class="panel-heading">
        <%= f.label :cave_id %>
         </div>
          <div class="panel-body">
        <%= f.number_field :cave_id, style: "font-size:20px;" %>
      </div>
      </div>
      <p>
      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
    <p>
<% end %>
